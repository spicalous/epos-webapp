{{talaythai-nav}}
<div style="padding-top:50px"></div>
<div class="row gutter-top-bottom">
  <div class="col-xs-12">
    <form class="form-horizontal">
      {{#form-group label="Telephone"}}
        <div class="input-group">
          {{input class="form-control" type="number" placeholder="Telephone" value=model.telephone}}
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-earphone"></span>
          </span>
        </div>
      {{/form-group}}
      {{form-group label="Flat/House" type="text" placeholder="Flat or house number" value=model.addressOne}}
      {{form-group label="Address" type="text" placeholder="Road name" value=model.addressTwo}}
      {{form-group label="Postcode" type="text" placeholder="Postcode" value=model.postcode}}
    </form>
  </div>
</div>
<div class="row gutter-bottom">
  <div class="col-xs-12 col-sm-offset-2 col-sm-9">
    {{#btn-button class="btn-primary btn-lg" action="searchCustomer" disabled=emptySearch}}Search{{/btn-button}}
  </div>
</div>
<div class="row gutter-top-bottom">
  <div class="col-xs-12 col-sm-offset-1 col-sm-10">
    <ul class="list-group">
      {{#each deliveryCustomerResults as |customer|}}
        {{delivery-customer-list-item customer=customer onClick=(action "transitionToCustomer" customer)}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="row gutter-top-bottom">
  <div class="col-xs-6">
    {{outlet}}
  </div>
</div>
