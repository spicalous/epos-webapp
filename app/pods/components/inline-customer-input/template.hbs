{{#if customer}}

  {{#if canRemove}}
    {{#btn/btn-default class="btn-danger btn-sm btn-block" action="onRemoveCustomer"}}
      REMOVE CUSTOMER
    {{/btn/btn-default}}
  {{/if}}

  <div class="gutter-top-bottom">
    {{component (concat 'inline-customer-input/selected/' customerType) customer=customer}}
  </div>

{{else}}

  <div class="dropdown">
    {{#btn/btn-default class="btn-danger btn-lg btn-block" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"}}
      SELECT CUSTOMER
    {{/btn/btn-default}}
    <ul class="dropdown-menu">
      <li><a class="lead"{{action "onSelectTakeaway"}}>Take away</a></li>
      <li role="separator" class="divider"></li>
      <li><a class="lead"{{action "onSelectDelivery"}}>Delivery</a></li>
      <!--
      <li role="separator" class="divider"></li>
      <li><a class="lead"{{action "onSelectEatIn"}}>Eat in</a></li>
      -->
    </ul>
  </div>

{{/if}}