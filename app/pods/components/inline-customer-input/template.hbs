{{#if customer.customerType}}

  {{#btn/btn-default class="btn-danger btn-sm" action="removeCustomer"}}
    Remove Customer
  {{/btn/btn-default}}
  <div class="gutter-top-bottom bottom-divider">
    {{component (concat 'selected-' customer.customerType) customer=customer}}
  </div>

{{else}}

  <div class="dropdown">
    {{#btn/btn-default class="btn-danger btn-lg" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"}}
      Select Customer
    {{/btn/btn-default}}
    <ul class="dropdown-menu" style="width: 100%;">
      <li><a {{action "setCustomer" "takeaway-customer"}}>Take away</a></li>
      <li role="separator" class="divider"></li>
      <li><a {{action "setCustomer" "delivery-customer"}}>Delivery</a></li>
    </ul>
  </div>

{{/if}}