<form class="form-horizontal">
  <div class="form-group">
    <label class="col-xs-3 control-label">NAME</label>
    <div class="col-xs-8">
      {{input class="form-control" type="text" placeholder="Customer name" value=nameRaw}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label">NUMBER</label>
    <div class="col-xs-8">
      {{input class="form-control" type="number" placeholder="Contact Number" value=contactNumberRaw}}
    </div>
  </div>
</form>
