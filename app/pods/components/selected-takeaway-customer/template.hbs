<form class="form-horizontal">
  <div class="form-group" style="margin-bottom: 5px">
    <label class="col-xs-3 control-label" for="takeaway-customerName">NAME</label>
    <div class="col-xs-8">
      {{input class="form-control" type="text" id="takeaway-customerName" placeholder="Customer name" value=name}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label" for="takeaway-customerName">NUMBER</label>
    <div class="col-xs-8">
      {{input class="form-control" type="text" id="takeaway-customerContactNumber" placeholder="Contact Number" value=contactNumber}}
    </div>
  </div>
</form>
