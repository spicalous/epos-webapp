<form class="form-horizontal">
  <div class="form-group">
    <label class="col-xs-3 control-label" for="delivery-customerAddress">ADDRESS</label>
    <div class="col-xs-8">
      <span class="form-control" style="overflow:scroll">{{customer.address}}</span>
    </div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label" for="delivery-customerPostcode">POSTCODE</label>
    <div class="col-xs-8">
      <span class="form-control">{{customer.postcode}}</span>
    </div>
  </div>
  <div class="form-group">
    <label class="col-xs-3 control-label" for="delivery-customerContactNumber">TEL</label>
    <div class="col-xs-8">
      <span class="form-control">{{customer.contactNumber}}</span>
    </div>
  </div>
</form>
