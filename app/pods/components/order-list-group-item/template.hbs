<div class="row">
  <div class="col-xs-12">ID {{order.id}}</div>
  <div class="col-xs-12">Ordered at {{format-time order.dateTime}}</div>
  <div class="col-xs-12">
    Â£{{format-currency order.total}} {{format-payment-method order.paymentMethod}}
  </div>
  {{#if order.notes}}
    <div class="col-xs-12">{{order.notes}}</div>
  {{/if}}
  <div class="col-xs-12">
    {{component (concat "order-" order.customer.customerType) customer=order.customer}}
  </div>
  <div class="col-xs-12">
    <ul class="list-group">
      {{#each order.orderItems as |orderItem|}}
        <li class="list-group-item">
          {{orderItem.quantity}} x {{orderItem.menuItem.menuId}} {{orderItem.menuItem.name}}
          {{#each orderItem.editOptions as |editOption|}}
            <div>{{editOption.name}}</div>
          {{/each}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-xs-6">
    {{#btn/btn-default class="btn-primary" action="printOrderAsEatIn"}}RE-PRINT (small){{/btn/btn-default}}
  </div>
  <div class="col-xs-6">
    {{#btn/btn-default class="btn-primary" action="printOrderAsDelivery"}}RE-PRINT (large){{/btn/btn-default}}
  </div>
</div>
