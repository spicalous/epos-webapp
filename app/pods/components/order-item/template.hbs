{{#if expanded}}
  <div class="order-item_expanded-content d-flex justify-content-between align-items-center">
    <button type="button" class="btn btn-outline-success" {{action "increment" bubbles=false}}>+</button>
    Â£{{format-currency item.total}}
    <button type="button" class="btn btn-outline-danger" {{action "decrement" bubbles=false}}>-</button>
  </div>
  {{#if item.menuItem.editCategories}}
    <div class="order-item_expanded-content">
      <button type="button" class="btn btn-block btn-outline-warning" {{action "toggleEdit" bubbles=false}}>Edit</button>
    </div>
  {{/if}}
{{/if}}

{{#if editing}}
  {{#bootstrap-modal title=item.menuItem.name onDismissed=(action "toggleEdit") onConfirm=(action "toggleEdit")}}
    <div class="btn-group" style="width: 100%">
      {{#each item.menuItem.editCategories as |editCategory|}}
        <button type="button" style="width: 33.33%" class="btn btn-secondary" {{action "setSelectedEditCategory" editCategory}}>{{editCategory.name}}</button>
      {{/each}}
    </div>
    <div>
      {{#each filteredEditOptions as |editOption|}}
        <div>
          {{editOption.name}}
        </div>
      {{/each}}
    </div>
  {{/bootstrap-modal}}
{{/if}}

