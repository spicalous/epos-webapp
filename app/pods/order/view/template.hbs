<div class="container-fluid order-view">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-8">
      <h2>Orders</h2>
    </div>
    <div class="col-xs-6 col-sm-2">
      <div class="order-view__filter-dropdowns">
        <div class="dropdown">
          {{#btn/btn-default class="btn-default dropdown-toggle order-type-filter-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"}}
            <span>
            Filter: {{#if orderTypeFilter}} {{orderTypeFilter}} {{else}} All {{/if}}
          </span>
            <span class="caret"></span>
          {{/btn/btn-default}}
          <ul class="dropdown-menu dropdown-menu-right">
            {{#each orderTypes as |orderType|}}
              <li><a {{action "setOrderTypeFilter" orderType}}>{{orderType}}</a></li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-10">
      <ul class="list-group">
        {{#each ordersSortedByTimestamp as |order|}}
          {{#if order.id}}
            {{order-list-group-item order=order onEditOrder=(action "editOrder") onPrintOrder=(action "printOrder")}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-offset-1 col-sm-10">
      <div class="page-header">
        <h2>Totals</h2>
      </div>
    </div>
  </div>
  <div class="row gutter-bottom">
    <div class="col-xs-3 text-right">
      <p>Cash</p>
      <p>Card</p>
      <p>Not Paid</p>
      <p>Total</p>
    </div>
    <div class="col-xs-3">
      <strong>
        <p>{{format-currency totalCash}}</p>
        <p>{{format-currency totalCard}}</p>
        <p>{{format-currency totalNotPaid}}</p>
        <p>{{format-currency totalAll}}</p>
      </strong>
    </div>
    <!--
    <div class="col-xs-12 col-sm-offset-1 col-sm-10">
      {{#btn/btn-default class="btn-primary" action="printOrderSummary"}}
        Print summary
      {{/btn/btn-default}}
    </div>
    -->
  </div>
</div>