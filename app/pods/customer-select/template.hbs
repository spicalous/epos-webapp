<div class="customer-select">
  <div class="container-fluid">
    <div class="row modal-header">
      <button {{action "hideCustomerSelect"}} type="button" class="close" aria-label="Close"><span
          aria-hidden="true">&times;</span></button>
      <h4 class="modal-title text-center">Customer</h4>
    </div>
    <div class="row modal-body">

      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-xs-2" for="mainAddress">Main address</label>
          <div class="col-xs-10">
            <input class="col-xs-10" type="text" class="form-control" id="mainAddress" placeholder="House number and road">
          </div>
        </div>

        <div class="form-group">
          <label class="col-xs-2" for="contactNumber">Contact number</label>
          <div class="col-xs-10">
            <input type="text" class="form-control" id="contactNumber" placeholder="Contact number">
          </div>
        </div>

        <div class="form-group">
          <label class="col-xs-2" for="postcode">Postcode</label>
          <div class="col-xs-10">
            <input class="col-xs-10" type="text" class="form-control" id="postcode" placeholder="Postcode">
          </div>
        </div>
      </form>

    </div>
  </div>
</div>
<div class="customer-select-backdrop">
</div>