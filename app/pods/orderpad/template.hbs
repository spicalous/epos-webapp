<div class="container-fluid height">
  <div class="row height">

    <div class="col-sm-6 height">
      <div id="orderpad-categories">
        <div class="row">
          {{#each item in model.categories}}
            {{category-item category=item action="categoryItemClick"}}
          {{/each}}
        </div>
      </div>
      <div id="orderpad-menu">
        {{outlet "menu"}}
      </div>
    </div>

    <div class="col-sm-6">
      <div id="orderpad-order">
        {{outlet}}
        {{#orderpad-order order=model.order title="Order Items"}}
          {{submit-btn action="submitOrder"}}
          {{cancel-btn action="cancelOrder"}}
        {{/orderpad-order}}
      </div>

      {{#orderpad-modal order=model.order title="Order Items"}}
        {{submit-btn action="submitOrder"}}
        {{cancel-btn action="cancelOrder"}}
      {{/orderpad-modal}}

      {{edit-item-modal order=model.order}}
      {{toggle-menu size=model.order.size}}
    </div>

  </div>
</div>