<div class="card mb-3">
  {{#if this.editing}}
    <div class="card-body">
      <Customer::DeliveryTagInput @name={{@tag.name}} @colour={{@tag.colour}} @onColour={{this.setTagColour}} />
      <div class="d-flex justify-content-between">
        <div>
          <ButtonWithConfirm class="btn-danger"
                             @confirmTitle="Delete tag"
                             @confirmMessage="Are you sure you want to delete this tag?"
                             @confirmBtnClass="btn-danger"
                             @confirmBtnText="Delete"
                             @onConfirm={{fn @onDelete @tag}}>
            Delete
          </ButtonWithConfirm>
        </div>
        <div>
          <button type="button" class="btn btn-main-secondary mr-1" {{on "click" this.cancelEditing}}>
            Cancel
          </button>
          {{#if this.canSave}}
            <button type="button" class="btn btn-primary" {{on "click" this.save}}>
              Save
            </button>
          {{else}}
            <button type="button" class="btn btn-secondary" disabled>
              Save
            </button>
          {{/if}}
        </div>
      </div>
    </div>
  {{else}}
    <div class="card-body d-flex justify-content-between">
      <div class="d-flex">
        <Customer::DeliveryTag class="align-self-center" @tag={{@tag}} />
      </div>
      <button type="button" class="btn btn-main-secondary" {{on "click" this.startEditing}}>
        Edit
      </button>
    </div>
  {{/if}}
</div>