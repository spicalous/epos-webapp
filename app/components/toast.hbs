<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" {{did-insert this.animateShow}} {{ref this "rootElement"}}>
  <div class="toast-body d-flex align-items-center">
    <span>{{@model.message}}</span>
    <button type="button" class="ml-2 close" data-dismiss="toast" aria-label="Close" {{on "click" this.hide}}>
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>