<div class="container-fluid">
  <div class="row">


    <div class="col-sm-6">
      <div class="orderPad-categories">
        <div class="row">
          {{#each model.categories}}
            {{category-item category=this action="categoryItemClick"}}
          {{/each}}
        </div>
      </div>
      <div class="orderPad-menu">
        {{outlet "menu"}}
      </div>
    </div>

    <div class="col-sm-6">
      {{order-pad-order order=model.order}}
    </div>


  </div>
</div>
{{outlet}}
