<div class="customer-browser">
  <div class="modal-content" style="height:100%">
    <div class="modal-header">
      <button {{action "hideCustomerBrowser"}} type="button" class="close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title text-center">Customer Search</h4>
    </div>
    <div class="modal-body">
      <div class="row">
        <form class="form-horizontal">
          <div class="form-group">
            <label class="col-xs-2 control-label" for="searchAddressRaw">Address</label>
            <div class="col-xs-10">
              {{input class="form-control" type="text" id="searchAddressRaw" placeholder="House number and road name" value=searchAddressRaw}}
            </div>
          </div>
          <div class="form-group">
            <label class="col-xs-2 control-label" for="searchPostcodeRaw">Postcode</label>
            <div class="col-xs-10">
              {{input class="form-control" type="text" id="searchPostcodeRaw" placeholder="Postcode" value=searchPostcodeRaw}}
            </div>
          </div>
          <div class="form-group" style="margin-bottom:10px;">
            <label class="col-xs-2 control-label" for="searchContactNumberRaw">Contact number</label>
            <div class="col-xs-10">
              {{input class="form-control" type="number" id="searchContactNumberRaw" placeholder="Contact number" value=searchContactNumberRaw}}
            </div>
          </div>
        </form>
      </div>
      <div class="row" style="margin-bottom: 10px;">

        {{#unless canSaveCustomer}}
          {{#alert-box classNames="col-xs-offset-2 col-sm-10" alertType="info" marginBottom=10}}
            Please enter a unique address, postcode and an 11 digit contact number to save the customer
          {{/alert-box}}
        {{/unless}}

        {{#if canSaveCustomer}}
          <div class="col-xs-offset-8 col-xs-2">
            {{#btn-button class="btn-default btn-close" action="hideCustomerBrowser"}}Cancel{{/btn-button}}
          </div>
        {{else}}
          <div class="col-xs-offset-10 col-xs-2">
            {{#btn-button class="btn-default btn-close" action="hideCustomerBrowser"}}Cancel{{/btn-button}}
          </div>
        {{/if}}

        {{#if canSaveCustomer}}
          <div class="col-xs-2">
            {{#btn-button class="btn-success btn-submit" action="saveAndSelectCustomer"}}Save and select{{/btn-button}}
          </div>
        {{/if}}
      </div>

      <div class="row">
        <div class="col-xs-12 top-bottom-gutter">
          {{#if debouncedSearch}}
            <div class="text-center">
              <img src="assets/ripple.svg">
              <div class="text-muted">Loading...</div>
            </div>
          {{else}}
            {{#if deliveryCustomerResults}}
              {{delivery-customer-list deliveryCustomers=deliveryCustomerResults selectDeliveryCustomer=(action "selectCustomer")}}
            {{else}}
              {{#if hasCustomerQuery}}
                <div class="text-center">
                  <div class="text-muted">No customers were found</div>
                </div>
              {{/if}}
            {{/if}}
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal-backdrop"></div>