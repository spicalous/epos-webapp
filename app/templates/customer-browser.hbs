<div class="customer-browser">
  <div class="container-fluid">
    <div class="row modal-header">

      <button {{action "hideCustomerBrowser"}} type="button" class="close" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>

      <h4 class="modal-title text-center">Customer</h4>

    </div>
    <div class="row modal-body">

      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-xs-2 control-label" for="searchAddress">Address</label>
          <div class="col-xs-10">
            {{input class="form-control" type="text" id="searchAddress" placeholder="House number and road name" value=searchAddress}}
          </div>
        </div>

        <div class="form-group">
          <label class="col-xs-2 control-label" for="searchPostcode">Postcode</label>
          <div class="col-xs-10">
            {{input class="form-control" type="text" id="searchPostcode" placeholder="Postcode" value=searchPostcode}}
          </div>
        </div>

        <div class="form-group">
          <label class="col-xs-2 control-label" for="searchContactNumber">Contact number</label>
          <div class="col-xs-10">
            {{input class="form-control" type="number" id="searchContactNumber" placeholder="Contact number" value=searchContactNumber}}
          </div>
        </div>
      </form>

      {{delivery-customer-list deliveryCustomers=deliveryCustomerResults}}
    </div>
  </div>
</div>
<div class="customer-browser-backdrop">
</div>