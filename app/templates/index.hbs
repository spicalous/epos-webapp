<div class="container-fluid">
  <div class="row">
    <div class="col text-center">
      <h2 class="mt-3">Orders</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-sm-4 mb-1">
      <LinkTo @route="order.new" @tagName="button" type="button" @class="btn btn-lg btn-block btn-outline-main">
        New
      </LinkTo>
    </div>
    <div class="col-12 col-sm-4 mb-1">
      <LinkTo @route="orders.eat-in" @tagName="button" type="button" @class="btn btn-lg btn-block btn-outline-main">
        Eat in
      </LinkTo>
    </div>
    <div class="col-12 col-sm-4 mb-1">
      <LinkTo @route="orders.eat-out" @tagName="button" type="button" @class="btn btn-lg btn-block btn-outline-main">
        Eat out
      </LinkTo>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h2 class="mt-3">Management</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-sm-4 mb-1">
      <LinkTo @route="delivery-customers" @tagName="button" type="button" @class="btn btn-lg btn-block btn-outline-main">
        Delivery customers
      </LinkTo>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <h2 class="mt-3">Settings</h2>
    </div>
  </div>
  <div class="row" test-id="settings">
    {{#each @model as |setting|}}
      <div class="col-12">
        <AppSetting::Radio @setting={{setting}}
                           @name={{setting.name}}
                           @value={{setting.value}}
                           @values={{array 0 1 2}}
                           @updateSetting={{this.saveSetting}} />
      </div>
    {{/each}}
  </div>
</div>
<div id="app-version" class="text-muted">
  {{this.name}} - {{this.version}}
</div>