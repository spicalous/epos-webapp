<div class="row">
  <div class="col-xs-12 text-center">
    <h3>Order</h3>
  </div>
</div>

<div class="row gutter-top-bottom text-center">
  <div class="col-xs-12 col-sm-6 gutter-top">
    {{#link-to "order.edit.create"}}
      {{#btn/btn-default class="btn btn-main btn-block"}}NEW{{/btn/btn-default}}
    {{/link-to}}
  </div>
  <div class="col-xs-12 col-sm-6 gutter-top">
    {{#link-to "order.view"}}
      {{#btn/btn-default class="btn btn-main btn-block"}}RECENT ORDERS{{/btn/btn-default}}
    {{/link-to}}
  </div>
</div>

<div class="row">
  <div class="col-xs-12 text-center">
    <h3>Management</h3>
  </div>
</div>

<div class="row gutter-top-bottom">
  <div class="col-xs-12 col-sm-4 gutter-top">
    {{#link-to "delivery-customer"}}
      {{#btn/btn-default class="btn btn-main btn-block"}}CUSTOMERS{{/btn/btn-default}}
    {{/link-to}}
  </div>
  <div class="col-xs-12 col-sm-4 gutter-top">
    {{#link-to "road"}}
      {{#btn/btn-default class="btn btn-main btn-block"}}ROADS{{/btn/btn-default}}
    {{/link-to}}
  </div>
  <div class="col-xs-12 col-sm-4 gutter-top">
    {{#link-to "postcode"}}
      {{#btn/btn-default class="btn btn-main btn-block"}}POSTCODES{{/btn/btn-default}}
    {{/link-to}}
  </div>
</div>

<div class="row">
  <div class="col-xs-12 text-center">
    <h3>Settings</h3>
  </div>
</div>

<div class="row gutter-top-bottom">
  {{#each model as |setting|}}
    <div class="col-xs-12 col-sm-6 col-md-4">
      {{app-setting setting=setting onSaveError=(action "onSaveError")}}
    </div>
  {{/each}}
</div>

<div class="text-muted" style="position:absolute;bottom:5px;left:10px;">
  {{name}} - {{version}}
</div>