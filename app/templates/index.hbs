<div class="row application_index">
  <div class="col">
    <div class="row mt-3">
      <div class="col text-center">
        <h2>Order</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-sm-6 mb-1">
        {{#link-to "order.edit" tagName="button" type="button" classNames="btn btn-lg btn-block btn-outline-main"}}
          New
        {{/link-to}}
      </div>
      <div class="col-12 col-sm-6 mb-1">
        {{#link-to "order.view" tagName="button" type="button" classNames="btn btn-lg btn-block btn-outline-main"}}
          Recent
        {{/link-to}}
      </div>
    </div>

    <div class="row mt-3">
      <div class="col text-center">
        <h2>Management</h2>
      </div>
    </div>
    <div class="row button-row">
      <div class="col-12 col-sm-4 mb-1">
        {{#link-to "delivery-customer" tagName="button" type="button"classNames="btn btn-lg btn-block btn-outline-main"}}
          Customers
        {{/link-to}}
      </div>
      <div class="col-12 col-sm-4 mb-1">
        {{#link-to "road" tagName="button" type="button" classNames="btn btn-lg btn-block btn-outline-main"}}
          Roads
        {{/link-to}}
      </div>
      <div class="col-12 col-sm-4 mb-1">
        {{#link-to "postcode" tagName="button" type="button" classNames="btn btn-lg btn-block btn-outline-main"}}
          Postcodes
        {{/link-to}}
      </div>
    </div>

    <div class="row mt-3">
      <div class="col text-center">
        <h2>Settings</h2>
      </div>
    </div>
    <div class="row">
      {{#each model as |setting|}}
        <div class="col-12">
          {{app-setting setting=setting onSaveError=(action "onSaveError")}}
        </div>
      {{/each}}
    </div>
  </div>
</div>
<div class="text-muted" style="position:fixed;bottom:5px;left:10px;">
  {{name}} - {{version}}
</div>