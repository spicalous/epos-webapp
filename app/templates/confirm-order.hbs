<div class="confirm-order">
  <div class="container-fluid">

    <div id="confirm-order-list-header" class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 gutter-top-bottom text-center">
        <div class="lead">
          Review order
        </div>
      </div>
    </div>

    <div id="confirm-order-list" class="row scroll-y gutter-top-bottom">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 lead">
        {{order-list order=model.order}}
      </div>
    </div>

    <div id="confirm-order-bottom">
      <div class="row gutter-top-bottom">
        <div class="col-xs-6 col-sm-offset-1 col-sm-5 text-center gutter-top-bottom top-bottom-border">
          <span class="lead">ITEMS: {{model.order.size}}</span>
        </div>
        <div class="col-xs-6 col-sm-5 text-center gutter-top-bottom top-bottom-border">
          <span class="lead">TOTAL: {{format-currency model.order.total}}</span>
        </div>
      </div>
      <div class="row gutter-top-bottom">
        <div class="col-xs-6 col-sm-offset-1 col-sm-5">
          <div class="lead gutter-top-bottom">
            Estimate Time ({{format-time computedEstimate}})
          </div>
          {{select-component content=estimatedDeliveryTimes selectedValue=model.order.estimatedTime action=(action (mut model.order.estimatedTime))}}
        </div>
        <div class="col-xs-6 col-sm-5">
          <div class="lead gutter-top-bottom">
            Payment Method
          </div>
          {{select-component content=paymentMethods selectedValue=model.order.paymentMethod action=(action (mut model.order.paymentMethod))}}
        </div>
      </div>

      <div class="row gutter-top-bottom">
        <div class="col-xs-12 col-sm-offset-1 col-sm-10">
          <div class="lead gutter-top-bottom">
            Notes
          </div>
          {{textarea class="form-control" rows="2" value=model.order.notes}}
        </div>
      </div>
      <div style="height:20px"></div>
      <div class="row">
        <div class="col-xs-6 no-padding">
          {{#btn/btn-default class="btn-default btn-lg" action="hideConfirmOrder"}}
            CANCEL
          {{/btn/btn-default}}
        </div>
        <div class="col-xs-6 no-padding">
          {{#btn/btn-default class="btn-success btn-lg" action="submitOrder" disabled=invalidOrder}}
            CONFIRM
          {{/btn/btn-default}}
        </div>
      </div>
    </div>

  </div>
</div>
