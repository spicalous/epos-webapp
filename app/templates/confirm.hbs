<div class="modal-dialog confirm-dialog">
  <div class="modal-content" style="height:100%">
    <div class="modal-header">
      <button {{action "dismissMessage" "confirm" model.cancel}} type="button" class="close"
                                                       aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title text-center">Confirm action</h4>
    </div>

    <div class="modal-body">
      <div class="row">
        <div class="col-xs-12">
          <div class="text-center">
            {{model.message}}
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <div class="col-xs-6">
        <div {{action "dismissMessage" "confirm" model.cancel}}>
          {{#btn-button class="btn-lg btn-default btn-close"}}
            CANCEL
          {{/btn-button}}
        </div>
      </div>
      <div class="col-xs-6">
        <div {{action "dismissMessage" "confirm" model.confirm}}>
          {{#btn-button class="btn-lg btn-success"}}
            CONFIRM
          {{/btn-button}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="confirm-backdrop"></div>
