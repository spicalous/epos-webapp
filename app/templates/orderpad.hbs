<div class="container-fluid">
  <div class="row">


    <div class="col-sm-6">
      <div class="orderpad-categories">
        <div class="row">
          {{#each category in model.categories}}
            {{category-item category=category action="categoryItemClick"}}
          {{/each}}
        </div>
      </div>
      <div class="orderpad-menu">
        {{outlet "menu"}}
      </div>
    </div>

    <div class="col-sm-6">
      {{orderpad-order order=model.order}}
    </div>


  </div>
</div>
{{outlet}}
